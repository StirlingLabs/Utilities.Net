<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Authors>Stirling Labs</Authors>
        <PackageOutputPath>../artifacts</PackageOutputPath>
        <Nullable>enable</Nullable>
        <TargetFrameworks>net5.0;netstandard2.0;netstandard2.1</TargetFrameworks>
        <LangVersion>9</LangVersion>
    </PropertyGroup>

    <ImportGroup>
        <Import Project="../Version.proj" />
    </ImportGroup>

    <ItemGroup>
        <PackageReference Include="Fody" Version="6.5.2">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
        <PackageReference Include="InlineIL.Fody" Version="1.7.1" PrivateAssets="all" />
        <PackageReference Include="JetBrains.Annotations" Version="2021.2.0" PrivateAssets="all" />
        <PackageReference Include="StirlingLabs.BigSpans" Version="21.8.1" />
    </ItemGroup>
    <ItemGroup Condition="'$(TargetFramework)'=='net5.0'">
        <PackageReference Include="XKCP.NET" Version="21.7.2" />
    </ItemGroup>

</Project>
